<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/expenseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/businessName"
        android:layout_marginLeft="97dp"
        android:layout_marginStart="97dp"
        android:layout_toEndOf="@+id/businessName"
        android:layout_toRightOf="@+id/businessName"
        android:text="TextView" />

    <TextView
        android:id="@+id/expenseTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/businessName"
        android:layout_alignStart="@+id/businessName"
        android:layout_below="@+id/businessName"
        android:layout_marginTop="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/expenseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expenseDate"
        android:layout_alignStart="@+id/expenseDate"
        android:layout_alignTop="@+id/expenseTotal"
        android:text="TextView" />

    <TextView
        android:id="@+id/expenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/expenseDate"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="TextView" />

</RelativeLayout>